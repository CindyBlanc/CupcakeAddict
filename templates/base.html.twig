<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=false">
        <title>{% block title %}Welcome!{% endblock %}</title>
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
            <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('image/favicon-16x16.png') }}">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbarDesktop">
        <div class="nom">
            <a href="{{path('accueil')}}"> CupCake Addict</a>
        </div>
            <div class="logo">
                <a href="{{path('accueil')}}"><img src="{{ asset('image/Logo.jpg') }}" alt="CupaCake_Addict"></a>
            </div>
            <div class="navbar">
                <div class="bgRose">
                    <ul>
                        <li><a href="{{path('cupcakes')}}"> CupCakes</a></li>
                {% if not app.user %} 
                        <li><a href="{{path('dejauncompte')}}"> Se connecter </a></li>
                {% else %}
                        <li><a href="{{path('user')}}"> Compte </a></li>
                        <li><a href="{{path('app_logout')}}"> Déconnexion </a></li>
                {% endif %}

                    </ul>   
            
                </div>

            </div>
        </nav>

        <div class="enteteMobile">
            <div class="logoMobile">
                <a href="{{path('accueil')}}"><img src="{{ asset('image/Logo.jpg') }}" alt="CupaCake_Addict"></a>
            </div>
            <div class="nomMobile">
                <p>CupCake Addict</p>
            </div>
        </div>
        <nav class="navbarMobile">
                <div class="bgRoseMobile">
                    <ul>
                        <li><a href="{{path('cupcakes')}}"><i class="fas fa-chess-queen"></i></a></li>
                        {% if not app.user %}
                        <li><a href="{{path('dejauncompte')}}"><i class="fas fa-user"></i></a></li>
                        {% else %}
                        <li><a href="{{path('user')}}"><i class="fas fa-user"></i></a></li>
                        <li><a href="{{path('app_logout')}}"><i class="fas fa-sign-out-alt"></i></a></li>
                        {% endif %}
                    </ul>                
                </div>


        </nav>


        {% block body %}{% endblock %}

        <footer>

        <div class="info">
            <div class="partenaire">
            <h3>Nos partenaires : </h3>
            <ul>
                <li><a href="https://epcf2.floriansaintlezer.fr/" target="_blank"><i class="fas fa-utensils"></i>Food and Go</a></li>
                <li><a href="https://agence-code.philippe-nguyen.com/" target="_blank"><i class="fas fa-home"></i>Agence Code</a></li>
                <li><a href="http://keurndox.keurndox.com/"><i class="fas fa-cocktail" target="_blank"></i>Keur N Dox</a></li>
            </ul>
            </div>
            <div class="droit">
                <p>© 2021 <a href="https://cindyblanc.com/" target="_blank"> Cindy Blanc </a> | Tous Droits Réservées</p>
            </div>
            <div class="rso">
                <h3>Nous suivre : </h3>
                <ul>
                 <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                 <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                 <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                </ul>
            </div>
        </div>

        </footer>

        	<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
			<script type="text/javascript" src="/js/script.js"></script>


    </body>
</html>
