{% extends 'base.html.twig' %}

{% block title %}Ajouter une recette{% endblock %}
    {% block titre %} {% endblock %}
{% block body %}
    <section>

        <h1>Ajouter une recette</h1>

        <div class="retour">
            <a href="{{path('user')}}"><i class="fas fa-reply"></i></a>
        </div>

        <div class="containerAdd">
            <div class="boxArticleAdd">
                {{ form_start(form) }}

                <div class="CupArticleAdd">
                    {{ form_label(form.nom) }} 
                    {{ form_widget(form.nom) }}
                </div>
                <div class="CupArticleAdd">
                    {{ form_row(form.imageFile) }} 
                </div>
                <div class="CupArticleAdd">
                    {{ form_row(form.ingredient) }} 
                    {{ form_row(form.recette) }}
                    {{ form_row(form.categorie) }} 
                </div>

                <button class="btn" type="submit">Envoyer</button>

                {{ form_end(form) }}    
            </div>
        </div>
    </section>
{% endblock %}
