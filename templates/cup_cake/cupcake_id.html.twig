{% extends 'base.html.twig' %}

{% block title %}{{ cupcake.nom }} {% endblock %}
    {% block titre %} {% endblock %}
{% block body %}
    <section>

        <div class="retour">
            <a href="{{path('cupcakes')}}"><i class="fas fa-reply"></i></a>
        </div>
        <div class="containerId">
            <div class="boxArticleId">
                <div class="nomCupArticleId">
                    <h2>{{ cupcake.nom }}</h2>
                </div>
                <div class="imgCupArticleId">
                    <img src="{{ asset('image/' ~ cupcake.image) }}" alt="">
                </div>
                <div class="recetteCupArticleId">
                <p>{{ cupcake.ingredient | nl2br }}</p>
                <p>{{ cupcake.recette | nl2br }}</p>
                </div>
                <div class="auteurId">
                <p>Recette de {{ cupcake.auteur.username }}</p>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
